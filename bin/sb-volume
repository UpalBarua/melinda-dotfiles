#!/bin/sh

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ðŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo "^c#f7768e^î§½ MUTED^d^" && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 60)) ) icon="î§¼" ;;
	$((vol >= 30)) ) icon="î§»" ;;
	$((vol >= 1)) ) icon="î§º" ;;
	* ) echo "î§½" && exit ;;
esac

echo "^c#bb9af7^$icon^d^ $vol%"
