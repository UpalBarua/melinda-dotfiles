# SXHKDRC

# LAUNCHING PROGRAMS

super + Return
  $TERMINAL

super + shift + Return
  st

super + space; b
  $BROWSER

super + space; v
  vscodium

super + space; x
  firefox

super + space; i
  timeshift-launcher

super + space; p
  $TERMINAL -e pulsemixer

super + space; c
  gpick

super + space; t
  thunar

super + space; o
  obsidian

super + space; y
  $TERMINAL -e btop

super + space; z
  $TERMINAL -e htop

super + space; f
  $TERMINAL -e lfub

super + space; o
  blueberry

# ROFI

super + r
  rofi -show drun

super + w
  rofi -show window

super + e
  rofi -show emoji -modi emoji

super + v
  rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + c
  rofi -show calc -modi calc -no-show-match -no-sort

super + ctrl + t
  ~/.local/bin/toggler

super + ctrl + i
  xcalib -invert -alter

super + ctrl + b
  ~/.config/rofi/scripts/rofi-bluetooth

super + ctrl + w
  ~/.config/rofi/scripts/rofi-wifi-menu.sh

# SYSTEM CONTROLS

# power controls

super + ctrl + alt + {p, r, s, l, q}
  {systemctl poweroff, systemctl reboot, systemctl suspend, betterlockscreen -l dimblur, bspc quit}

# audio controls

alt + F1
  amixer set Capture toggle;\
  notify-send "Microphone toggled";

alt + {F3, F2}
  {pamixer -i 5, pamixer -d 5};\
  /home/upal/.config/dunst/scripts/volume.sh;

alt + F4
  pamixer --toggle-mute

alt + F6
  ~/.local/bin/connect-headphones

# brightness controls

alt + {F12, F11}
  {brightnessctl set +5%, brightnessctl set 5%-};\
  /home/upal/.config/dunst/scripts/brightness.sh screen;

# screenshot
 
Print
  disown & flameshot & flameshot screen -p ~/pictures/screenshots/ --clipboard

shift + Print
  disown & flameshot & flameshot gui -p ~/pictures/screenshots/ --clipboard

# wallpapers

alt + w; {c, d, l}
  {feh --recursive --bg-fill --randomize $HOME/pictures/wallpapers, ~/.local/bin/delwall, ~/.local/bin/lockwall};

# BSPWM CONTROLS

# restart sxhkd
super + shift + s
  pkill -USR1 -x sxhkd

# restart bspwm
super + shift + r
  bspc wm -r

# close and kill
super + shift + q
  bspc node -c

super + m
  bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
  bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
  bspc node -s biggest.window

# Flip layout vertically/horizontally
super + {_,shift + }a
  bspc node @/ --flip {vertical,horizontal}

# STATE / FLAGS

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
  bspc node -g {marked,locked,sticky,private}

# focus/swap 

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }n
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# preselect

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# move/resize

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -100 0,bottom 0 100,top 0 -100,right 100 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -100 0,top 0 100,bottom 0 -100,left 100 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#Rotate desktop
super + shift + space
	bspc node @/ --rotate {90,-90}

# set the window state
alt + Tab
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

